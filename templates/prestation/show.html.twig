{% extends 'base.html.twig' %}

{% block title %}Prestation
	{{ prestation.nom }}
{% endblock %}

{% block body %}
	<div id="prestation-wrapper">
		<div class="container">
			<h1 class="mb-2">Prestation :</h1>

			<table class="table">
				<tbody>
					<tr>
						<th>Nom</th>
						<td>{{ prestation.nom }}</td>
					</tr>
					<tr>
						<th>Temps</th>
						<td>{{ prestation.tempsRealisation }}</td>
					</tr>
					<tr>
						<th>Cout (HT)</th>
						<td>{{ prestation.coutHT }}</td>
					</tr>
					<tr>
						<th>Description</th>
						<td>{{ prestation.description }}</td>
					</tr>
					<tr>
						<th>Type prestation</th>
						<td>{{ prestation.typePrestation }}</td>
					</tr>
				</tbody>
			</table>


			<div class="container mt-5">
				<div class=" d-flex flex-row row align-items-start">
					<div class="col-lg-4 col-md-12  text-center">
						<a class="button"  href="{{ path('prestation_edit', {'id': prestation.id}) }}">Modifier</a>

					</div>
					<div class="col-lg-4 col-md-12  text-center">
						{{ include('prestation/_delete_form.html.twig') }}

					</div>
					<div class="col-lg-4 col-md-12 text-center">
						<a class="button" href="{{ path('prestation_index') }}">Retour</a>
					</div>
				</div>
			</div>

			
		</div>
	</div>
{% endblock %}
