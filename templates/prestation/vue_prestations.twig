				{% else %}
					<h2>Nos prestations :</h2>
					{# affichage par type de prestation #}
					{% for type in typesPrestation %}
							{# nom type prestation #}
							{% set monTypePresta = type.typePrestation %}

							<h3 class="mt-5">{{monTypePresta}} : </h3>
						
							{% include 'prestation/vue_typePrestation.twig' with {"prestations_par_type" : prestations, "monTypePresta" : monTypePresta} %}
														
					{% endfor %}
				{% endif %}
			</div>
		</div>
	</div>


