{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
   	<div id="prestation-wrapper">
		<div class="container">
			<h1 class="mb-2">Client</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Nom</th>
                    <td>{{ client.nom }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ client.prenom }}</td>
                </tr>
                <tr>
                    <th>Date de première saisie</th>
                    <td>{{ client.datePremiereSaisie ? client.datePremiereSaisie|date('d- m-Y') : '' }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ client.adresse }}</td>
                </tr>
                <tr>
                    <th>Type de vehicule</th>
                    <td>{{ client.typeVehicule }}</td>
                </tr>
                <tr>
                    <th>plaque d'immatriculation</th>
                    <td>{{ client.plaqueImmat }}</td>
                </tr>
            </tbody>
        </table>

       
  
			<div class="container mt-5">
				<div class=" d-flex flex-row row align-items-start">
					<div class="col-lg-4 col-md-12  text-center">
						<a class="button"  href="{{ path('client_edit', {'id': client.id}) }}">Modifier</a>
					</div>
					<div class="col-lg-4 col-md-12  text-center">
						 {{ include('client/_delete_form.html.twig') }}
					</div>
					<div class="col-lg-4 col-md-12 text-center">
						<a class="button" href="{{ path('client_index') }}">Retour</a>
					</div>
				</div>
			</div>

			
		</div>
	</div>
{% endblock %}
